class Solution(object):#usign the sliding array algo
    def minSubArrayLen(self, target, nums):
        left=right=0
        min_len=float("inf")
        new_sum=0
        for right in range(len(nums)):
            new_sum+=nums[right]
            while new_sum>=target:
                min_len=min(min_len,right-left+1)
                new_sum-=nums[left]
                left+=1
        if min_len==float("inf"):
            return 0 
        else:
            return min_len
