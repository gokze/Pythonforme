class Solution(object):
    def canJump(self, nums):
        last_index = len(nums) - 1
        farthest = 0
        i = 0
        
        while i <= farthest:  # as long as we can move forward
            farthest = max(farthest, i + nums[i])
            print("i =", i, "nums[i] =", nums[i], "farthest =", farthest)
            
            if farthest >= last_index:  # we can reach the end
                return True
            i += 1
        
        return False

    

